@model Expense_Tracker.Models.Client

@{
    ViewData["Title"] = (Model.ClientId == 0) ? "Create Client" : "Edit Client";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Clients" asp-action="AddOrEdit"  method="post">
    <div class="form-group">
        <label asp-for="Name">Client Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
