@model IEnumerable<Expense_Tracker.Models.Client>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
<h2>Clients</h2>

<p>
    <a asp-action="AddOrEdit" class="btn btn-primary">Create New</a>
</p>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4>Clients</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Client Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var client in Model)
                            {
                                <tr>
                                    <td>@client.Name</td>
                                    <td>
                                        <div class="btn-group" role="group" aria-label="Client Actions">
                                            <a href="/Clients/AddOrEdit/@client.ClientId" class="btn btn-primary">
                                                <i class="fa-solid fa-pen fa-lg"></i>Edit
                                            </a>
                                            <form action="/Clients/Delete/@client.ClientId" method="post" onsubmit="return confirm('Are you sure you want to delete this client?');">
                                                <button type="submit" class="btn btn-danger">
                                                    <i class="fa-solid fa-trash-can fa-lg text-danger"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>